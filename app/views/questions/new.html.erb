<% if @question.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @question.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @question do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.submit "Ask" %>
<% end %>