
  <% if user_signed_in? %>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">  
            <% if @question.errors.any? %>
              <h2>We have some errors here !</h2>
              <ul>
                <% @question.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            <% end %>

            <%= form_for @question do |f| %>
            <div class="form-group">
              <%= f.label :title, "Question title" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">  
              <%= f.label :content, "Detail Content" %>  
              <%= f.text_area :content, rows: "10", class: "form-control" %>
            </div>
            <div class="form-group float-right">   
              <%= f.submit "Ask Question" ,class: "btn btn-outline-primary" %>
              <%= link_to "Back", root_path, class: "btn btn-light" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>    
  <% end %>