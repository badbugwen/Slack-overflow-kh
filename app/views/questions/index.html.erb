<div class="container">
  <div class="row">
    <!--show differernt slogen if current_user-->
    <% if user_signed_in? %>
      <div class="col">
        <%= link_to 'Ask Question', new_question_path, class:"btn btn-primary float-right" %>
      </div>
    <% else %>
      <div class="col">
        <h5 class="bg-info text-center text-white p-2"><%= "If you want to ask something, PLEASE log in." %></h5>
      </div>
    <% end %>
  </div>

  <!--Question list-->
  <div class="card border border-light">
    <ul class="list-group list-group-flush">
      <%= render :partial => "shared/question_item", :collection => @questions, :as => :question %>
    </ul>
  </div>
  <div class="container pagination justify-content-center mt-2" >
    <%= paginate @questions, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
  </div>
</div>  