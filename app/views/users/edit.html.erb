<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-auto">
      <h1>Edit Profile</h1>

    <%= form_for @user do |f| %>

      <% if @user.errors.any? %>
        <%= @user.errors.full_messages.to_sentence %>
      <% end %>
       
      <div class="form-group">
        <%= f.label :name, "姓名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :company, "公司" %>
        <%= f.text_field :company, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :job_title, "職稱" %>
        <%= f.text_field :job_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :website, "個人網站" %>
        <%= f.text_field :website, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :twitter, "Twitter" %>
        <%= f.text_field :twitter, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :github, "GitHub" %>
        <%= f.text_field :github, class: "form-control" %>
      </div>

       <div class="form-group">
        <%= f.label :intro, "自我介紹" %>
        <%= f.text_area :intro, class: "form-control" %>
      </div>

      <div class="form-group float-right">
        <%= f.submit "Update Profile", class: "btn btn-outline-primary" %>
        <%= link_to "Back", user_path(@user), class: "btn btn-light" %>
      </div>

    <% end %>
    </div>
  </div>  
</div>
